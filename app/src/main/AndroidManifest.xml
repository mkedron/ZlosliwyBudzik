<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.vistula.mkedron.zlosliwybudzik">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="pl.vistula.mkedron.zlosliwybudzik.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.vistula.mkedron.zlosliwybudzik.ConfigureAlarmActivity"
            android:label="@string/title_activity_configure_alarm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="pl.vistula.mkedron.zlosliwybudzik.SetupTimeActivity"
            android:label="@string/title_activity_setup_time"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name="pl.vistula.mkedron.zlosliwybudzik.alarm.AlarmReceiver" />

        <activity
            android:name="pl.vistula.mkedron.zlosliwybudzik.DisableAlarmActivity"
            android:label="@string/title_activity_disable_alarm"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>